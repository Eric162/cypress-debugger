{
  "name": "cypress-debugger",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "author": "Currents Software Inc",
  "homepage": "https://github.com/currents-dev/cypress-debugger",
  "bugs": {
    "url": "https://github.com/currents-dev/cypress-debugger/issues",
    "email": "support@currents.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.7.0"
  },
  "scripts": {
    "build": "tsup-node --dts",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "release": "release-it",
    "release:npm": "npm run build && ./publish.js"
  },
  "keywords": [
    "cypress",
    "e2e",
    "cypress-debugger"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "commander": "^10.0.0",
    "esbuild": "^0.17.7",
    "release-it": "^15.10.1",
    "tsconfig": "*",
    "tsup": "^6.6.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "cypress-debugger-plugin": "*",
    "cypress-debugger-support": "*"
  },
  "peerDependencies": {
    "cypress": ">=10.0.0"
  },
  "files": [
    "dist"
  ],
  "tsup": {
    "entry": [
      "./index.ts"
    ],
    "external": [
      "cypress"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "shims": true,
    "clean": true,
    "sourcemap": "inline",
    "platform": "node",
    "target": "esnext"
  },
  "release-it": {
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "git": {
      "requireCleanWorkingDir": false,
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "../../CHANGELOG.md"
      }
    }
  }
}
